{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../build"
  },
  "package": {
    "productName": "PacketHunter",
    "version": "1.0.1"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "ask": true,
        "confirm": false,
        "message": true,
        "open": true,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "Â© 2024 Chen zhangtao",
      "deb": {
        "depends": ["Npcap","Webview2"]
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.github.ink-carp.PacketHunter",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["npcap-1.79.exe"],
      "shortDescription": "A Network Packet Capture Tool",
      "targets": "msi",
      "windows": {
        "wix":{
          "language": "zh-CN" 

        },
        "webviewInstallMode": {
          "type": "downloadBootstrapper"
        },
        
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "PacketHunter",
        "width": 800
      }
    ]
  }
}
